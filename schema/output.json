{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ReportData",
  "description": "Data structure for embedding in HTML as JSON",
  "type": "object",
  "properties": {
    "events": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/EventRow"
      }
    },
    "summary": {
      "$ref": "#/$defs/Summary"
    }
  },
  "required": [
    "events",
    "summary"
  ],
  "$defs": {
    "CgtDetails": {
      "description": "CGT details for disposal events",
      "type": "object",
      "properties": {
        "cost_gbp": {
          "type": "string"
        },
        "gain_gbp": {
          "type": "string"
        },
        "matching_components": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/MatchingComponentRow"
          }
        },
        "proceeds_gbp": {
          "type": "string"
        },
        "rule": {
          "type": "string"
        },
        "warnings": {
          "description": "Warnings for this disposal (e.g., \"Unclassified\", \"NoCostBasis\", \"InsufficientPool\")",
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "proceeds_gbp",
        "cost_gbp",
        "gain_gbp",
        "rule",
        "matching_components",
        "warnings"
      ]
    },
    "EventRow": {
      "type": "object",
      "properties": {
        "asset": {
          "type": "string"
        },
        "asset_class": {
          "type": "string"
        },
        "cgt": {
          "description": "CGT details for disposal events (None for other event types)",
          "anyOf": [
            {
              "$ref": "#/$defs/CgtDetails"
            },
            {
              "type": "null"
            }
          ]
        },
        "datetime": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "event_type": {
          "type": "string"
        },
        "fees_gbp": {
          "type": "string"
        },
        "id": {
          "description": "Source data identifier",
          "type": [
            "string",
            "null"
          ]
        },
        "quantity": {
          "type": "string"
        },
        "tax_year": {
          "type": "string"
        },
        "value_gbp": {
          "type": "string"
        }
      },
      "required": [
        "datetime",
        "tax_year",
        "event_type",
        "asset",
        "asset_class",
        "quantity",
        "value_gbp",
        "fees_gbp",
        "description"
      ]
    },
    "MatchingComponentRow": {
      "type": "object",
      "properties": {
        "cost_gbp": {
          "type": "string"
        },
        "matched_asset": {
          "type": [
            "string",
            "null"
          ]
        },
        "matched_date": {
          "description": "For Same-Day/B&B: the linked acquisition date",
          "type": [
            "string",
            "null"
          ]
        },
        "matched_description": {
          "type": [
            "string",
            "null"
          ]
        },
        "matched_event_type": {
          "description": "Details of the matched acquisition for display",
          "type": [
            "string",
            "null"
          ]
        },
        "matched_original_qty": {
          "type": [
            "string",
            "null"
          ]
        },
        "matched_original_value": {
          "type": [
            "string",
            "null"
          ]
        },
        "matched_row_id": {
          "description": "Row ID of the matched acquisition (for navigation)",
          "type": [
            "integer",
            "null"
          ],
          "format": "uint",
          "minimum": 0
        },
        "matched_tax_year": {
          "type": [
            "string",
            "null"
          ]
        },
        "quantity": {
          "type": "string"
        },
        "rule": {
          "type": "string"
        }
      },
      "required": [
        "rule",
        "quantity",
        "cost_gbp"
      ]
    },
    "Summary": {
      "type": "object",
      "properties": {
        "assets": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "cost_basis_warning_count": {
          "description": "Count of disposals with cost basis issues (NoCostBasis or InsufficientPool)",
          "type": "integer",
          "format": "uint",
          "minimum": 0
        },
        "disposal_count": {
          "type": "integer",
          "format": "uint",
          "minimum": 0
        },
        "event_count": {
          "type": "integer",
          "format": "uint",
          "minimum": 0
        },
        "income_count": {
          "type": "integer",
          "format": "uint",
          "minimum": 0
        },
        "max_date": {
          "type": [
            "string",
            "null"
          ]
        },
        "min_date": {
          "type": [
            "string",
            "null"
          ]
        },
        "tax_years": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "total_costs": {
          "type": "string"
        },
        "total_costs_with_unclassified": {
          "type": "string"
        },
        "total_gain": {
          "type": "string"
        },
        "total_gain_with_unclassified": {
          "type": "string"
        },
        "total_proceeds": {
          "type": "string"
        },
        "total_proceeds_with_unclassified": {
          "description": "Totals including unclassified events (for conservative estimates)",
          "type": "string"
        },
        "total_staking": {
          "type": "string"
        },
        "unclassified_count": {
          "description": "Count of unclassified disposal events (derived from warnings)",
          "type": "integer",
          "format": "uint",
          "minimum": 0
        },
        "warning_count": {
          "description": "Count of disposals with any warning",
          "type": "integer",
          "format": "uint",
          "minimum": 0
        }
      },
      "required": [
        "total_proceeds",
        "total_costs",
        "total_gain",
        "total_proceeds_with_unclassified",
        "total_costs_with_unclassified",
        "total_gain_with_unclassified",
        "total_staking",
        "event_count",
        "disposal_count",
        "income_count",
        "warning_count",
        "unclassified_count",
        "cost_basis_warning_count",
        "tax_years",
        "assets"
      ]
    }
  }
}
